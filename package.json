{
  "name": "base64-wasm",
  "version": "0.0.0",
  "description": "Fast Base64 encoding powered by WebAssembly",
  "main": "index.cjs",
  "module": "index.js",
  "type": "module",
  "files": [
    "*.js",
    "*.cjs",
    "*.d.ts*"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test": "node test/test.js",
    "bench": "node bench/node-bench.js",
    "build": "npm run build:wasm && npm run build:cjs && npm run build:dts",
    "build:cjs": "scripts/build.js index.js base64.js base64-js.js",
    "build:dts": "tsc -d",
    "build:wasm": "npm run build:wasm:cpp && npm run build:wasm:b64",
    "build:wasm:cpp": "clang --target=wasm32 -O3 -flto -nostdlib -Wl,--no-entry -Wl,--export-all -Wl,--lto-O3 -o base64.wasm base64.c",
    "build:wasm:b64": "base64 base64.wasm | fold -w80 | scripts/into.js '[A-Za-z0-9+=/][A-Za-z0-9+=/\\n]{80,}' base64.js",
    "prepack": "npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "See license in LICENSE.md",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/base64-encoding.git"
  },
  "homepage": "https://github.com/qwtel/base64-encoding#readme",
  "devDependencies": {
    "base64-js": "^1.3.1",
    "typescript": "^3.9.7"
  },
  "bugs": {
    "url": "https://github.com/qwtel/base64-encoding/issues"
  },
  "dependencies": {},
  "keywords": [
    "base64",
    "wasm",
    "webassembly",
    "fast",
    "universal",
    "isomorphic"
  ]
}
