{
  "name": "base64-encoding",
  "version": "0.3.0",
  "description": "Fast Base64 encoding powered by WebAssembly",
  "main": "index.cjs",
  "module": "index.js",
  "type": "module",
  "files": [
    "*.js",
    "*.cjs",
    "*.d.ts*"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test": "node test/test.js",
    "bench": "node bench/node-bench.js",
    "copy": "cp docs/README.md README.md && cp docs/LICENSE.md LICENSE.md",
    "sed": "npm run sed:_config && npm run sed:LICENSE",
    "sed:_config": "sed -i '' -E \"s/$npm_package_name-[0-9]+\\.[0-9]+\\.[0-9]+/$npm_package_name-$npm_package_version/\" docs/_config.yml",
    "sed:LICENSE": "sed -i '' -E \"s:licenses/:docs/licenses/:\" LICENSE.md",
    "build": "npm run build:wasm && npm run build:cjs && npm run build:dts",
    "build:cjs": "scripts/build.js index.js base64.js base64-js.js",
    "build:dts": "tsc -d",
    "build:wasm": "npm run build:wasm:cpp && npm run build:wasm:b64",
    "build:wasm:cpp": "clang --target=wasm32 -O3 -flto -nostdlib -Wl,--no-entry -Wl,--export-all -Wl,--lto-O3 -o base64.wasm base64.c",
    "build:wasm:b64": "base64 base64.wasm | fold -w80 | scripts/into.js '[A-Za-z0-9+=/][A-Za-z0-9+=/\\n]{80,}' base64.js",
    "version": "npm run copy && npm run sed && git add .",
    "prepack": "npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "See license in LICENSE.md",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/base64-encoding.git"
  },
  "homepage": "https://qwtel.com/base64-encoding/",
  "devDependencies": {
    "base64-js": "^1.3.1",
    "typescript": "^3.9.7"
  },
  "bugs": {
    "url": "https://github.com/qwtel/base64-encoding/issues"
  },
  "dependencies": {},
  "keywords": [
    "base64",
    "wasm",
    "webassembly",
    "fast",
    "universal",
    "isomorphic",
    "encoding",
    "decoding"
  ]
}
