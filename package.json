{
  "name": "web-base64",
  "version": "1.0.2",
  "description": "Slightly modernized version of base64-js",
  "main": "index.cjs",
  "module": "index.js",
  "type": "module",
  "files": [
    "*.js",
    "*.cjs"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test": "node test/test.js",
    "bench": "node bench/node-bench.js",
    "build": "npm run build:wasm && npm run build:cjs",
    "build:cjs": "scripts/build",
    "build:wasm": "npm run build:wasm:cpp && npm run build:wasm:b64",
    "build:wasm:cpp": "clang --target=wasm32 -O3 -flto -nostdlib -Wl,--no-entry -Wl,--export-all -Wl,--lto-O3 -o base64.wasm base64.c",
    "build:wasm:b64": "base64 base64.wasm | fold -w80 | scripts/into '[A-Za-z0-9+=/][A-Za-z0-9+=/\\n]{80,}' base64.js",
    "prepack": "npm run build && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/web-base64.git"
  },
  "homepage": "https://github.com/qwtel/web-base64#readme",
  "devDependencies": {
    "base64-js": "^1.3.1"
  }
}
